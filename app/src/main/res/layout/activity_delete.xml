<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="wallyson.com.br.mypocket.view.DeleteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/delete_card"
        android:id="@+id/textView16"
        android:layout_alignTop="@+id/spnDeleteCard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="@string/delete_card"
        android:id="@+id/btnDeleteCard"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/spnDeleteSpending" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/delete_account"
        android:id="@+id/btnDeleteAccount"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnDeleteCard"
        android:layout_alignTop="@+id/btnDeleteSpending" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/delete_account"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/spnDeleteAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/spnDeleteCard"
        android:layout_above="@+id/spnDeleteAccount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#525252"
        android:layout_toRightOf="@+id/textView17"
        android:layout_toEndOf="@+id/textView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/spnDeleteAccount"
        android:layout_above="@+id/spnDeleteSpending"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#525252"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView17"
        android:layout_toRightOf="@+id/textView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/spnDeleteSpending"
        android:layout_above="@+id/btnDeleteAccount"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnDeleteCard"
        android:background="#525252"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:layout_alignLeft="@+id/spnDeleteAccount"
        android:layout_alignStart="@+id/spnDeleteAccount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_alignTop="@+id/spnDeleteSpending"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtSpending"
        android:text="@string/spending" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_above="@+id/textView16">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/delete2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_information"
            android:id="@+id/textView18"
            android:layout_gravity="center_horizontal"
            android:textColor="#0e7fbb"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/delete_spending"
        android:id="@+id/btnDeleteSpending"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnDeleteAccount"
        android:layout_toEndOf="@+id/btnDeleteAccount" />

</RelativeLayout>
